{
  "name": "telegram-marketplace",
  "version": "1.0.0",
  "description": "Telegram Marketplace для цифровых товаров с USDT оплатой",
  "main": "telegram-bot/bot.js",
  "scripts": {
    "start": "node telegram-bot/bot.js",
    "start:ts": "ts-node telegram-bot/src/bot.ts",
    "dev": "nodemon telegram-bot/bot.js",
    "dev:ts": "nodemon --exec ts-node telegram-bot/src/bot.ts",
    "build": "echo 'Skipping TypeScript build - using JavaScript files directly'",
    "lint": "eslint telegram-bot/src/**/*.ts",
    "lint:fix": "eslint telegram-bot/src/**/*.ts --fix",
    "format": "prettier --write \"telegram-bot/src/**/*.ts\"",
    "server": "node backend/server.js",
    "add-test": "node scripts/add-test-product.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "telegram",
    "marketplace",
    "usdt",
    "crypto",
    "bot"
  ],
  "author": "Maxim Petrukha",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongodb": "^7.0.0",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.64.0",
    "qrcode": "^1.5.3",
    "tronweb": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/parser": "^6.17.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1"
  }
}
